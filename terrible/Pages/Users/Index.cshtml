@page
@model terrible.Pages.Users.IndexModel
@{
}

<div>
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text" asp-for="userAccount.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label>Username</label>
                <input type="text" asp-for="userAccount.Username" class="form-control" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="text" asp-for="userAccount.Password" class="form-control" />
            </div>

            <div class="form-group">
                <label>Balance</label>
                <input type="text" asp-for="userAccount.Balance" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
    <div>
        <p style="color: #f00">@Model.Message</p>
    </div>
</div>