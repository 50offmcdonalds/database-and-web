@page
@model terrible.Pages.UserPages.UserIndexModel
@{
}

<div class="row">
    <div class="col-md-6">
        <h1>User Main Page</h1>
        <br>
        <h2>Welcome, @Model.Name</h2>
        <h2>Your balance is £@Model.Balance</h2>
        <p>
            @if (@Model.Admin)
            {
                <a asp-page="/AdminPages/AdminIndex" class="btn btn-danger">Admin Panel</a>
            }
        </p>
        <p>
            <a asp-page="Transaction" class="btn btn-dark">Transaction</a>
            <a asp-page="Deposit" class="btn btn-dark">Deposit</a>
            <a asp-page="Update" class="btn btn-dark">Update Details</a>
            <a asp-page="TransactionHistory" class="btn btn-dark">Transaction History</a>
            <a asp-page="/LogoutPage/Logout" class="btn btn-dark">Logout</a>
        </p>
    </div>
    <div class="col-md-6">
        <div>
            @*<img id="profile" src="~/imageUpload/default.png" alt="User Profile Image" style="width: 200px;" />*@
            <img id="profile" src="@Url.Content("~")/imageUpload/@Model.userProfileName" alt="User Profile Image" style="width: 200px;" />
        </div>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Upload user image:</label>
                <input type="file" asp-for="userFile" onchange="readURL(this)" accept="image/*" />
            </div>
            <br>
            <div>
                <input type="submit" value="Upload" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
