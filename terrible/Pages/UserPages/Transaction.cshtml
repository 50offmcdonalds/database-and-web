@page
@model terrible.Pages.UserPages.TransactionModel
@{
}

<h1>Transactions</h1>
<div class="row">
    <div class="col-md-4">
        <h2>Make Transaction</h2>
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Transaction.SenderID" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Receiver ID</label>
                <input type="text" asp-for="Transaction.ReceiverID" class="form-control" />
            </div>
            <div class="form-group">
                <label>Amount</label>
                <input type="text" asp-for="Transaction.TransferAmount" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-dark" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h2>Transaction History</h2>
        <div>
            <table class="table table-active">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TransactionHistory[0].SenderID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TransactionHistory[0].ReceiverID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TransactionHistory[0].TransferAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TransactionHistory[0].TransactionTime)
                        </th>
                    </tr>
                </thead>
                @for(int i=0; i < Model.TransactionHistory.Count; i++)
                {
                <tr>
                    <td>@Model.TransactionHistory[i].SenderID</td>
                    <td>@Model.TransactionHistory[i].ReceiverID</td>
                    <td>@Model.TransactionHistory[i].TransferAmount</td>
                    <td>@Model.TransactionHistory[i].TransactionTime</td>
                </tr>
                }
            </table>
        </div>

    </div>
    <div>
        <p style="color: #f00">@Model.Message</p>
    </div>
</div>