@page
@model terrible.Pages.UserPages.UpdateModel
@{
}
<h1>Update Account Details</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Change Name</label>
                <input type="text" asp-for="UserDetails.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label>Change Password</label>
                <input type="password" asp-for="UserDetails.Password" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>