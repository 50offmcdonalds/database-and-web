@page
@model terrible.Pages.AdminPages.UserData.DeleteModel
@{
}
<h1>Delete User Account</h1>
<h2 style="color: #f00;">Are you sure you want to delete this account?</h2>
<div class="row">
    <table class="table table-active">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserRec.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserRec.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserRec.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserRec.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserRec.Admin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserRec.Balance)
                </th>
            </tr>
        </thead>
        <tr>
            <td>@Model.UserRec.Id</td>
            <td>@Model.UserRec.Name</td>
            <td>@Model.UserRec.Username</td>
            <td>@Model.UserRec.Password</td>
            <td>@Model.UserRec.Admin</td>
            <td>@Model.UserRec.Balance</td>
        </tr>
    </table>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group" style="float: left;">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <a href="View" style="float: left;"class="btn btn-dark">Go Back</a>
        </form>
    </div>
</div>