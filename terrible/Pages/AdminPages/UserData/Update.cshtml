@page
@model terrible.Pages.AdminPages.UserData.UpdateModel
@{
}

<h1>Update User Details</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="UserRec.Id" />

            <div class="form-group">
                <label>Name</label>
                <input type="text" asp-for="UserRec.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" asp-for="UserRec.Username" class="form-control" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="text" asp-for="UserRec.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label>Admin</label>
                <input type="checkbox" asp-for="UserRec.Admin" class="form-check" />
            </div>
            <div class="form-group">
                <label>Balance</label>
                <input type="text" asp-for="UserRec.Balance" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>