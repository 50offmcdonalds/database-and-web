@page
@model terrible.Pages.AdminPages.ViewModel
@{
}

<div class="row">
    <div class="col-md-12">
        <div>
            <table class="table table-active">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserList[0].Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserList[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserList[0].Username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserList[0].Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserList[0].Admin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserList[0].Balance)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                @for (int i = 0; i < Model.UserList.Count; i++)
                {
            <tr>
                <td>@Model.UserList[i].Id</td>
                <td>@Model.UserList[i].Name</td>
                <td>@Model.UserList[i].Username</td>
                <td>@Model.UserList[i].Password</td>
                <td>@Model.UserList[i].Admin</td>
                <td>@Model.UserList[i].Balance</td>
                <td>
                    update/delete
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
</div>