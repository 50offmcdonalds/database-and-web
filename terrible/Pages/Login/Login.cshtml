@page
@model terrible.Pages.Login.LoginModel
@{
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" asp-for="UserLogin.Username" class="form-control" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="UserLogin.Password" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-dark" />
            </div>
        </form>
    </div>
    <div>
        <p style="color: #f00">@Model.Message</p>
    </div>
</div>